<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plastic"
    android:orientation="vertical"
    android:padding="25dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginBottom="20dip"
        android:background="@drawable/display"
        android:gravity="center"
        android:orientation="vertical" >

<TextView
    android:id="@+id/txtLCD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:lines="4"
    android:textAllCaps="true"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:textColor="#ffffff"
    android:textSize="14dp"
    android:textStyle="bold"
    android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal" >

        <CheckBox
            android:id="@+id/chkReady"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:button="@drawable/led_green"
            android:checked="false" />

        <CheckBox
            android:id="@+id/chkError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:button="@drawable/led_red"
            android:checked="false" />

        <Button
            android:id="@+id/btnButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginRight="5dip"
            android:background="@drawable/button" />

<CheckBox
    android:id="@+id/chkClosed"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dip"
    android:button="@drawable/led_yellow"
    android:checked="false" />

        <CheckBox
            android:id="@+id/chkOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:button="@drawable/led_yellow"
            android:checked="false" />

    </LinearLayout>

</LinearLayout>